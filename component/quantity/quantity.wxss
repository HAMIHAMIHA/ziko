
.quantity {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.quantity__change {
  width: 48rpx !important;
  height: 48rpx;
  padding: 6rpx;
  background: #F4F4F4;
  font-family: "Inter";
  font-size: 38rpx;
  border-radius: 50%;
  border: 1rpx solid #E6E9EE;
  display: flex;
  justify-content: center;
  align-items: center;
}

.quantity__change .icon {
  width: 100%;
  height: 100%;
  padding: 0;
}

.quantity__amount {
  padding: 0 16rpx;
}