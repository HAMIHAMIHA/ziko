.message-scroll_container {
  width: 100%;
  height: 58rpx;
  color: #000000;
  font-size: 24rpx;
  line-height: 36rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
  position: relative;
}

.message-scroll {
  width: 100%;
  /* Using rpx cannot just calcuate the sum, will show up different for different screen */
  height: calc((36rpx + 8rpx + 8rpx + 2rpx + 2rpx) * 5);
  position: absolute;
  top: 0;
}

.message-item {
  height: fit-content !important;
  padding: 8rpx 0;
}

.message {
  width: fit-content;
  max-width: calc(100% - 20rpx);
  margin-left: auto;
  padding: 2rpx 10rpx;
  background: var(--ziko-default-);
  border-radius: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}