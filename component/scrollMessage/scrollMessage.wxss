.message-scroll_container {
  width: 100%;
  height: 50rpx;
  color: #000000;
  font-size: 20rpx;
  line-height: 30rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
  position: relative;
}

.message-scroll {
  width: 100%;
  /* Using rpx cannot just calcuate the sum, will show up different for different screen */
  height: calc((30rpx + 4rpx + 4rpx + 6rpx + 6rpx) * 5);
  position: absolute;
  top: 0;
}

.message-item_container {
  height: fit-content !important;
  padding: 4rpx 0;
}

.message {
  width: fit-content;
  max-width: calc(100% - 20rpx);
  margin-left: auto;
  padding: 6rpx 8rpx;
  background: var(--ziko-default-);
  border-radius: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}