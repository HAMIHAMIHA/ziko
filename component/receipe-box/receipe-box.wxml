<navigator class="receipe_container" url="{{ _routes.recipe + '?id=' + item.id }}">
  <view class="receipe">
    <view class="receipe-image">
      <image src="{{ _folders.recipe_picture + item.mainPicture.uri }}" mode="widthFix"></image>
    </view>
    <view class="gilroy_700 uppercase receipe-title">
      {{ item.title }}
    </view>
    <view class="receipe-info">
      <view class="reveipe-prep-time">{{ _t.preparation }}: {{ item.prep }}{{ _t.min }}</view>
      <view class="reveipe-bake-time">{{ _t.baking }}: {{ item.bake }}{{ _t.min }}</view>
    </view>
  </view>
</navigator>