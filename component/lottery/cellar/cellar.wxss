.uppercase.progress__container{
  margin-top: 100rpx;
}


.progress__title {
  width: 100%;
  text-align: center;
}

.lottery-label {
  padding-bottom: 32rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  letter-spacing: 0.2em;
  text-align: center;
}

/* Progress */
.progress__container .progress {
  margin-bottom: 64rpx;
  padding: 48rpx 24rpx;
  background: #21252F;
  text-align: center;
  border-radius: 8px;
}

/* Progress - bottle */
.progress__container .progress .progress__bottle .icon {
  margin-bottom: 32rpx;
  font-size: 180rpx;
}

.progress__bottle {
  background: linear-gradient(to top, #FF4040 var(--filled-), #51596D var(--filled-));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
/* End of Progress - bottle */

.progress .progress__label {
  padding-bottom: 32rpx;
  font-size: 24rpx;
  line-height: 28rpx;
}

/* Progress - bar */
.progress-bar__container {
  height: calc(70rpx + 24rpx + 28rpx);
  display: flex;
  position: relative;
}

.progress-bar__container .progress-bar__values {
  left: var(--position-);
  position: absolute;
}

.progress-bar__container .progress-bar_first {
  text-align: left;
}

.progress-bar__container .progress-bar_last {
  transform: translateX(-100%);
}

.progress-bar__values .progress-axis {
  padding-bottom: 70rpx;
  font-size: 24rpx;
  line-height: 28rpx;
}

.progress-bar__values .progress-axis:after {
  content: "";
  width: 1px;
  height: 20rpx;
  margin: auto;
  padding-top: 4rpx;
  background: #9A9EA6;
  display: block;
}

.progress-bar__values.progress-bar_first .progress-axis:after {
  margin-left: 0;
}

.progress-bar__values.progress-bar_last .progress-axis:after {
  margin-right: 0;
}

.progress-bar__values .progress-label {
  width: fit-content;
  padding: 4rpx 6rpx;
  background: #909297;
  color: #000;
  font-size: 18rpx;
  line-height: 22rpx;
  white-space: nowrap;
  border-radius: 4px;
  position: absolute;
  right: 50%;
  bottom: 0;
}

.progress-bar__values.progress-bar_last .progress-label {
  right: 0;
}

.progress-label:before {
  content: "";
  width: 12rpx;
  height: 6rpx;
  clip-path: polygon(74% 38%, 100% 0%, 100% 100%, 0 100%, 38% 75%);
  background: #909297;
  position: absolute;
  right: 4rpx;
  top: -6rpx;
}

.progress-label.unlocked {
  background: #ffffff;
}

.progress-label.unlocked:before {
  background: #ffffff;
}

.progress-bar__container .progress-bar {
  width: 100%;
  height: 20rpx;
  background: #51596D;
  border-radius: 40px;
  position: absolute;
  bottom: calc(70rpx - 20rpx);
}

.progress-bar__container .progress-bar:before {
  content: "";
  width: var(--filled-);
  max-width: 100%;
  height: 20rpx;
  background: #FF4040;
  border-radius: 40px;
  position: absolute;
  top: 0;
  left: 0;
}
/* End of Progress - bar */
/* End of Progress */

/* Lottery List */
.offer-lotteries_list {
  row-gap: 48rpx;
}

.lotteries_prize .draw-label {
  padding-bottom: 12rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
}

.lotteries_prize .offer-lottery {
  height: calc(100% - 30rpx - 12rpx);
  padding: 24rpx 0 48rpx;
  background: #2E3037;
  border: 0;
  border-radius: 4px;
  box-sizing: border-box;
}

.lotteries_prize .unlocked .offer-lottery {
  border: 2px solid #4AF399;
}

.lotteries_prize .offer-lottery .offer-lottery_gift {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lotteries_prize .offer-lottery .offer-lottery_status {
  margin-bottom: 16rpx;
  padding: 8rpx 16rpx 4rpx;
  font-size: 24rpx;
  line-height: 1.2;
  border-radius: 30px;
}

.lotteries_prize .draw__container {
  height: 100%;
}

.lotteries_prize .draw__container .offer-lottery_title {
  padding-bottom: 24rpx;
  font-size: 20rpx;
  line-height: 24rpx;
}

.lotteries_prize .draw__container .offer-lottery_detail {
  /* min-height: 60rpx; */
  padding: 0 66rpx;
}

/* Unlocked */
.lotteries_prize .draw__container.unlocked .offer-lottery_status {
  background: #4AF399;
  color: #0E3420;
}

.lotteries_prize .draw__container.unlocked .offer-lottery_title {
  color: #4af399;
}

/* Locked */
.lotteries_prize .draw__container.locked .offer-lottery_status {
  background: #090A0E;
  color: #7F8286;
}

.lotteries_prize .draw__container.locked .offer-lottery_title {
  color: #898989;
}

/* Gift */
.lotteries_prize .draw__container .offer-lottery_image {
  width: 64rpx;
  height: 64rpx;
  padding-bottom: 16rpx;
  font-size: 64rpx;
  border-radius: 50%;
}

.lotteries_prize .draw__container .offer-lottery_image image {
  border-radius: 50%;
}

/* Winner */
.lotteries_prize .offer-lottery .offer-lottery_winner {
  width: 100%;
  height: 100%;
  min-height: 74rpx;
  margin-top: 24rpx;
  padding-top: 48rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid #42444D;
}

.lotteries_prize .offer-lottery .offer-lottery_winner .winner-label {
  font-size: 20rpx;
  line-height: 24rpx;
}

.lotteries_prize .offer-lottery .offer-lottery_winner .winner {
  margin: auto;
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lotteries_prize .offer-lottery .offer-lottery_winner .winner-image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
  font-size: 36rpx;
  border-radius: 50%;
}

.lotteries_prize .offer-lottery .offer-lottery_winner .winner-name {
  font-size: 20rpx;
  line-height: 30rpx;
}

.lotteries_prize .offer-lottery .offer-lottery_winner .winner .icon-crown {
  height: 32rpx;
  padding-right: 8rpx;
  font-size: 32rpx;
  color: #ffc700;
}

.lotteries_prize .offer-lottery .offer-lottery_winner .winner .win-text {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #FF4040;
}
