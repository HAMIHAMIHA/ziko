/* Container */
.offer-container {
  padding: 0 30rpx;
}

/* Scroll Dates */
.scroll-date .h-scroll {
  padding-top: 48rpx;
  text-transform: uppercase;
}

.scroll-date .h-scroll_item {
  margin: 0 2rpx;
}

.scroll-date .h-scroll_item:first-child {
  margin-left: 0;
}

.scroll-date .h-scroll_item:last-child {
  margin-right: 0;
}

.scroll-date .item_container {
  width: 106rpx;
  padding: 30rpx 0;
  color: #BFBFBF;
  text-align: center;
  display: block;
}

.all .item_container {
  padding: 44rpx 0;
  font-size: 48rpx;
  line-height: 40rpx;
}

.item-date .item_container {
}

.item-date .day-of-week {
  padding-bottom: 8rpx;
  font-size: 24rpx;
  line-height: 20rpx;
}

.item-date .date {
  font-size: 52rpx;
  line-height: 40rpx;
}

.scroll-date .selected .item_container {
  background: #3E424F;
  color: var(--ziko-default-);
  border-radius: 4px;
}