.content-body_container {
  width: var(--width-);
  display: flex;
  position: relative;
  right: var(--left-);
  transition: all 0.3s ease-in-out;
}

.content-body {
  width: 100%;
  position: relative;
  transition: all 0.5s ease-in;
}

.content-body.checked .content-label,
.content-body.checked .content-image_container,
.content-body.checked .content-detail {
  opacity: 0.4;
}

.content-body .content-detail .content-info {
  padding: 8rpx 0 16rpx;
}

.content-total {
  padding-top: 32rpx;
  color: #11141B;
  font-size: 32rpx;
  line-height: 32rpx;
}

.icon-check {
  width: fit-content;
  font-size: 54rpx;
  padding: 24rpx;
  background: #45D66D;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0);
  z-index: 10;
}

@keyframes check-scale {
  0% { transform: translate(-50%, -50%) scale(0); }
  50% { transform: translate(-50%, -50%) scale(1.5); }
  100% { transform: translate(-50%, -50%) scale(1); }
}

.content-body.checked .icon-check {
  transform: translate(-50%, -50%) scale(1);
  animation-name: check-scale;
  animation-duration: 0.5s;
}


.modal-container {
  width: 100%;
  padding: 120rpx 0;
  height: 80vh;
}
.modal-container .content-title-container {
  text-align: left;
  padding-left: 220rpx;
  margin-top: 160rpx;
}



.modal-container .content-title {
  font-size: 42rpx;
  line-height: 50rpx;

  color: #252831;
}

.modal-container .content-subtitle {
  font-size: 28rpx;
  line-height: 38rpx;

  color: #252831;
}

.modal-container .content-foot {
  position: relative;
}