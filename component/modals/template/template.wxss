page {
  position: relative;
}

.modal-component {
  width: 100vw;
  height: 100%;
  color: var(--blk-);
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 10000;
  pointer-events: all;
}

