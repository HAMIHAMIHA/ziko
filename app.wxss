/* Ziko Colors */
.ziko-kitchen {
  background: var(--ziko-kitchen-);  
}
.ziko-garden {
  background: var(--ziko-garden-);  
}
.ziko-cellar {
  background: var(--ziko-cellar-);  
}
.ziko-pet {
  background: var(--ziko-pet-);  
}
.ziko-baby {
  background: var(--ziko-baby-);  
}

/* Gradient Text */
.gradient-text {
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Horizontal Scroll */
.h-scroll {
  width: 100%;
  white-space: nowrap;
}

