.pack-products .product_left {
  width: 74%;
}

.pack-products .product_container:last-child {
  border-bottom: 0;
}

.pack-products .product-image, .product-image image {
  width: 160rpx;
  height: 160rpx;
}

.pack-products .product-info {
  padding-left: 24rpx;
}

.pack-products .product-info .product-title {
  font-size: 32rpx;
  line-height: 28rpx;
}

.pack-products .product-detail_container {
  padding-top: 8rpx;
  font-size: 26rpx;
  line-height: 32rpx;
}

.pack-products .product-navigate {
  padding: 12rpx 32rpx;
  background: #33363E;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
}
/* End of Pack Products */

.product-reciepe {
  border-top: 2rpx solid #424756;
