.product-info_container {
  margin: 0 30rpx;
  padding: 28rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
}

.product-info_title {
  padding: 4rpx 0;
  color: #C0BEC6;
  font-size: 32rpx;
  line-height: 28rpx;
}

.product-info_detail {
  font-size: 26rpx;
  line-height: 32rpx;
}

.product-detail_content {
  padding: 4rpx 0;
}

.product-price_container {
  padding: 4rpx 0;
  font-size: 40rpx;
  line-height: 50rpx;
}

/* Product Description */
.product-descrtiption {
  padding: 32rpx 30rpx 64rpx;
  font-size: 26rpx;
  line-height: 32rpx;
}
/* End of Product Description */

/* Pack Products */
.ziko-offer .pack-products .title {
  padding-top: 32rpx;
  text-align: left;
}

.pack-products .product_container {
  padding: 48rpx 0;
  border-bottom: 1px solid #424756;
}

/* TODO need to verify
.pack-products .product_container.sold-out {
