<view class="container container-grey container-btn-bottom">
  <!-- Profile Input Group -->
  <view class="white-box inputs_container contact-info">
    <view class="nunito_700 header">{{ _t.contact_info }}</view>

    <view class="detail">
      <view class="detail_label">{{ _t.name }}</view>
      <view class="detail_input">
        <input class="input" type="text" value="{{ formData.type }}"></input>
      </view>
    </view>
  </view>
  <!-- End of Profile Input Group -->

  <!-- Pets Input Group -->
  <view class="white-box inputs_container pet-info" wx:for="{{ pets }}" wx:for-item="pet" wx:key="index">
    <view class="nunito_700 header">{{ _t.pet + ' ' + index }}</view>
    <view class="icon icon-trash btn-icon"></view>

    <view class="detail">
      <view class="detail_label">{{ _t.name }}</view>
      <view class="detail_input">
        <view class="input">
          <input type="text" value="{{ formData.type }}"></input>
        </view>
      </view>
    </view>

    <view class="detail">
      <text class="detail_label">{{ _t.type }}</text>
      <view class="detail_input">
        <picker
          class="input"
          value="{{ _picker_select.type }}"
          range="{{ _picker.pet_type }}"
          bindchange="petPickerChange"
          data-pet_index="{{ index }}"
          data-key="type"
        >
          <view class="flex-between">
            <text>{{  _t.pet_type[pet.type] }}</text>
            <text class="icon icon-arrow"></text>
          </view>
        </picker>
      </view>
    </view>

    <view class="detail">
      <text class="detail_label">{{ _t.size }}</text>
      <view class="detail_input">
        <picker 
          class="input"
          value="{{ _picker_select.pet_size }}"
          range="{{ _picker.pet_size }}"
          bindchange="petPickerChange"
          data-pet_index="{{ index }}"
          data-key="size"
        >
          <view class="flex-between">
            <text>{{ _t.pet_size[pet.size] }}</text>
            <text class="icon icon-arrow"></text>
          </view>
        </picker>
      </view>
    </view>
  </view>
  <!-- End of Pets Input Group -->

  <!-- Add Pet Button -->
  <view class="btn-outline_container">
    <button class="btn-outline nunito_600" hover-class="none" bindtap="">{{ '+ ' + _t.add_pet }}</button>
  </view>
  <!-- End of Add Pet Button -->

  <!-- Submit Button -->
  <view class="btn-bottom">
    <button class="nunito_600" hover-class="none" bindtap="pay">{{ _t.save }}</button>
  </view>
  <!-- End of Submit Button -->
</view>