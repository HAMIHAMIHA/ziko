/* USER INFO */
.avatar-container {
  height: 222rpx;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.avatar-image {
  width: 184rpx;
  height: 184rpx;
  border-radius: 50%;
}

.avatar-image.icon {
  font-size: 184rpx;
}

.avatar-label {
  padding: 2rpx 50rpx;
  color: #041542;
  font-size: 26rpx;
  line-height: 40rpx;
  white-space: nowrap;
  position: absolute;
  bottom: 0;
}

.avatar-label__text {
  position: relative;
  z-index: 1;
}

.avatar-label__background {
  height: 58rpx;
  vertical-align: middle;
  position: absolute;
  left: 0;
  bottom: 0;
}

.user-info__name {
  padding: 32rpx 0;
  background: transparent;
  color: var(--ziko-default-);
  font-size: 32rpx;
  line-height: 34rpx;
  text-align: center;
}

.user-info__name text {
  opacity: 0.6;
  padding-left: 60rpx;
  margin-right: -100rpx;
}

button:not([size=mini]).user-info__login {
  width: fit-content;
  margin-top: 24rpx;
  padding: 0 32rpx;
  background: #373A44;
  color: var(--ziko-default-);
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-bottom: 20rpx;
}

/* END OF USER INFO */

/* PROFILE INFO */
.profile-info {
  margin: 40rpx 0 16rpx;
}

.profile-info .disabled {
  pointer-events: none;
}

.profile-info__button {
  padding: 26rpx 40rpx;
  font-size: 28rpx;
  line-height: 34rpx;
  background-color: #252831;
  display: flex;
  justify-content: space-between;
}

.profile-info__button+.profile-info__button {
  border-top: 1px solid #545764;
}

.profile-info-title {
  font-size: 32rpx;
  line-height: 32rpx;
  padding: 6rpx 0;
}

.profile-info-content {
  font-size: 24rpx;
  line-height: 32rpx;
  padding-top: 10rpx;
  color: rgb(255, 255, 255, 0.75)
}

.profile-info__button .icon.icon-arrow-right {
  position: relative;
}

.profile-info__button .icon.icon-arrow-right::before {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}


/* END OF PROFILE INFO */

/* SHORT CUTS */
.short-cuts {
  /* padding: 30rpx 35rpx; */
  display: flex;
  justify-content: center;
  padding: 0px 20rpx;
}

.short-cuts__button,
button:not([size=mini]).short-cuts__button {
  /* width: unset; */
  width: 166rpx;
  height: 166rpx;
  margin: 0;
  padding: 0;
  background: transparent;
  color: var(--ziko-default-);
  text-align: center;
  align-items: center;
  margin: 0 8rpx;
  background-color: #373A44;
  box-sizing: border-box;
  padding-top: 40rpx;
  border-radius: 8rpx;
}

.short-cuts__button-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.short-cut__icon {
  width: 48rpx;
  height: 48rpx;
  margin: auto;
  margin-bottom: 14rpx;
  color: #20A1FF;
  font-size: 48rpx;
  position: relative;
}

.short-cuts__button.new .short-cut__icon:before {
  height: 100%;
}

.short-cuts__button.new .short-cut__icon:after {
  content: '';
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: #F74A5C;
  border: 1px solid #373A44;
  border-radius: 50%;
  position: absolute;
  right: -5rpx;
  top: -4rpx;
  z-index: 1;
}

.short-cut__label {
  padding: 5rpx 0;
  font-size: 20rpx;
  line-height: 1;
}

/* END OF SHORT CUTS */

/* LANGUAGE BUTTON */

.language-choice {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 40rpx;
  background-color: #252831;
}


.language-setting {
  width: 176rpx;
  display: flex;
  transform: translateX(0%);
  border-radius: 40rpx;
  background-color: rgb(255, 255, 255, 0.1);
}

.language-setting:after {
  content: '';
  width: 88rpx;
  height: 100%;
  background: var(--ziko-default-);
  border-radius: 40rpx;
  display: block;
  position: absolute;
  z-index: -1;
  transition: all 0.3s ease-in-out;

}

.language-setting.selected-en:after {
  left: 0;
}

.language-setting.selected-zh:after {
  left: 88rpx;
}

button:not([size=mini]).langauge {
  width: 88rpx;
  margin: 0;
  padding: 0;
  background-color: transparent;
  color: #8C8C8C;
  font-size: 28rpx;
  line-height: 50rpx;
  transition: all 0.3s ease-in-out;
  border-radius: 40rpx;
}

.language-setting.selected-en button:not([size=mini]).langauge:first-child,
.language-setting.selected-zh button:not([size=mini]).langauge:last-child {
  color: #12151E;
}

/* END OF LANGUAGE BUTTON */

