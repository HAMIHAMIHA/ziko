/* copy-box */
.copybox {
  position: fixed;
  z-index: 100000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.copybox-cancel {
  position: absolute;
  z-index: 3;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .5);
}

.copybox-tap {
  position: absolute;
  z-index: 4;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx;
  height: 910rpx;
  background-color: #FAFAFA;
  border-radius: 40rpx 40rpx 0 0;
  box-sizing: border-box;
  color: black;
  animation-name: move;
  animation-duration: 1s;
}

@keyframes move {
  from {
    transform: translateY(1000rpx);
  }

  to {
    transform: translateY(0rpx);
  }
}

.copybox-tap .add-box {
  margin: 80rpx 100rpx;
  display: flex;
  justify-content: flex-end;
  z-index: 100000
}

.copybox-tap .add-box .icon-kitchen-head {
  font-size: 101.4rpx;
  padding-right: 22rpx;
