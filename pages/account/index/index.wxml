<view class="container">
  <!-- LOGIN BUTTON -->
  <view class="user-info__container" wx:if="{{ !user }}">
    <view class="user-info__avatar">
      <view class="avatar-container">
        <!-- <image class="avatar-image" src="{{ _folder.user_avatar + user.image.uri }}"></image> -->
        <text class="avatar-image icon icon-ziko"></text>
        <view class="gilroy_900 uppercase avatar-label">
          <text class="avatar-label__text">{{ _t.tourist }}tourist</text>
          <image class="avatar-label__background" src="/assets/images/avatarLabel.png" mode="scaleToFill"></image>
        </view>
      </view>
    </view>
    <button class="gilroy_700 uppercase user-info__login" open-type="getPhoneNumber">{{ _t.login }}login</button>
  </view>
  <!-- END OF LOGIN BUTTON -->

  <!-- USER INFO -->
  <view class="user-info__container" wx:else>
    <view class="user-info__avatar">
      <view class="avatar-container">
        <!-- <image class="avatar-image" src="{{ _folder.user_avatar + user.image.uri }}"></image> -->
        <image class="avatar-image" src="/assets/images/receipeBanner.png"></image>
        <view class="gilroy_900 uppercase avatar-label">
          <text class="avatar-label__text">{{ _t[user.type] }}jshgkldh j</text>
          <image class="avatar-label__background" src="/assets/images/avatarLabel.png" mode="scaleToFill"></image>
        </view>
      </view>
    </view>
    <view class="gilroy_700 uppercase user-info__name">{{ user.name }}jshgkldh jk</view>
  </view>
  <!-- END OF USER INFO -->

  <!-- PROFILE INFO -->
  <view class="nunito_600 card profile-info">
    <navigator class="profile-info__button" url="{{ _routes.account_info }}">{{ _t.edit_my_info }}edit my info</navigator>
    <navigator class="profile-info__button" url="{{ _routes.address }}">{{ _t.edit_my_address }}edit my address</navigator>
    <navigator class="profile-info__button" url="{{ _routes.fapiao }}">{{ _t.fapiao_info }}fapiao</navigator>
    <!-- Hide for v1 -->
    <navigator class="profile-info__button" url="{{ _routes.receipes }}" wx:if="{{ showing }}">{{ _t.my_favorite_recipes }}recipes</navigator> 
  </view>
  <!-- END OF PROFILE INFO -->

  <!-- SHORT CUTS -->
  <view class="gilroy_700 uppercase card short-cuts">
    <navigator class="short-cuts__button" url="{{ _routes.orders }}" open-type="switchTab">
      <view class="short-cut__icon icon icon-package"></view>
      <view class="short-cut__label">{{ _t.orders }}orders</view>
    </navigator>
    <!-- Hide for v1 -->
    <navigator class="short-cuts__button" url="{{ _routes.claims }}" wx:if="{{ showing }}">
      <view class="short-cut__icon icon icon-box"></view>
      <view class="short-cut__label">{{ _t.claims }}claims</view>
    </navigator>
    <button class="short-cuts__button" open-type="contact">
      <view class="short-cut__icon icon icon-headset"></view>
      <view class="short-cut__label">{{ _t.contact }}contact</view>
    </button>
    <!-- Hide for v1 -->
    <navigator class="short-cuts__button" url="{{ _routes.vouchers }}" wx:if="{{ showing }}">
      <view class="short-cut__icon icon icon-redpacket"></view>
      <view class="short-cut__label">{{ _t.vouchers }}vouchers</view>
    </navigator>
  </view>
  <!-- END OF SHORT CUTS -->

  <!-- LANGUAGE BUTTON -->
  <view class="nunito_700 uppercase language-setting selected-zh{{ language }}">
    <button class="langauge" bindtap="switchLanguage" data-language="en">{{ _t.en }}en</button>
    <button class="langauge" bindtap="switchLanguage" data-language="zh-CN">{{ _t.zh }}zh</button>
  </view>
  <!-- END OF LANGUAGE BUTTON -->
</view>