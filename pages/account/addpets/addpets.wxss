/* pages/account/addpets/addpets.wxss */
page {
  background-color: #12151E;
}

.container {
  font-size: 30rpx;
  background-color: #12151E;
}

.pets-name {
  padding: 20rpx;
  padding-top: 80rpx;
  background-color: #12151E;
}

.detail_input {
  width: 100%;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.4);
  padding: 20rpx 0;
  font-size: 28rpx;
  padding-bottom: 6rpx;
}

.type-of-pet {
  padding: 20rpx;
  padding-top: 40rpx;
}

.type-button-box {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.type-title {
  padding: 30rpx 0;
}

.type-button-box .type-button {
  width: 320rpx !important;
  padding: 28rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
  border: 3rpx solid rgba(255, 255, 255, 0.1);
}

.type-button-box .type-button.selected {
  border: 3rpx solid #E6A86E;
}

.cat-check {
  color: #E6A86E;
  position: relative;
  right: -14px;
  padding-top: 6rpx;
}

.dog-check {
  color: #D46B08;
  position: relative;
  right: -14px;
  padding-top: 6rpx;
}

.type-button .icon.icon-walk-cat::before,
.type-button .icon.icon-walk-dog::before {
  color: #8C8C8C;
}

.icon.icon-walk-cat,
.icon.icon-walk-dog {
  font-size: 48rpx;
}

.type-name {
  font-size: 28rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
  color: #8C8C8C;
}

.type-button .icon.icon-check::before,
.type-button .icon.icon-check::before {
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);

  color: transparent;
}

.type-button.selected .icon.icon-check.cat::before,
.type-button.selected .icon.icon-walk-cat::before,
.selected .type-name.cat {
  color: #E6A86E;
}

.type-button.selected .icon.icon-check.dog::before,
.type-button.selected .icon.icon-walk-dog::before,
.selected .type-name.dog {
  color: #D46B08;
}

.size-of-pet {
  padding: 20rpx;
  padding-top: 40rpx;
}

.size-of-pet-title {
  padding-bottom: 30rpx;
}

.radio-color {
  display: flex;
  justify-content: space-around;
}

radio .wx-radio-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: transparent;
  border: 3rpx solid #8C8C8C;
}

radio .wx-radio-input.wx-radio-input-checked {
  background: transparent;
  border-color: #E6A86E;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  font-size: 0rpx;
  color: transparent;
  background: #E6A86E;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.under-black-button {
  padding: 30rpx 0;
  margin: 0 30rpx;
  margin-bottom: 48rpx;
  background-color: #12151E;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  border: 3rpx solid #595959;
  width: 90% !important;
}

.under-black-button .font-size {
  color: #F0F0F0;
  font-size: 32rpx;
  line-height: 36rpx;
}

.under-white-button {
  padding: 38rpx 0;
  margin: 0 30rpx;
  margin-bottom: 52rpx;
  background-color: #F0F0F0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 90% !important;
}

.under-white-button .font-size {
  color: #1F1F1F;
  font-size: 32rpx;
  line-height: 20rpx;
}

.error-field-1 .field-1 .type-button,
.error-field-2 .field-2 .radio-color radio .wx-radio-input {
  border-color: #FF4040;
}