                </view>

                <view class="offer-ticket_remaining">
                  <text class="nunito ticket-count_label">{{ _t.remaining_draws }}: </text>
                  <text class="nunito_700 ticket-count_text">{{ offer.lotteries.remaining_draws }}</text>
