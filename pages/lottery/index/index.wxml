          </view> -->
          <view class="new-offer-banner">
            <view class="top-box top-box-color-{{ offer.community.name }}">
              <view class="top-box-won top-box-color-{{ offer.community.name }}" wx:if="1">
                <text class="icon icon-crown"></text>
                <view>
                  <view class="crown-context1">{{ _t.congrats }}</view>
                  <view class="crown-context2">{{ _t.you_won }}</view>
                </view>
              </view>
              <view class="color-{{ offer.community.name }}-golden font-size1">Ziko {{ offer.community.name }}</view>
              <view class="color-{{ offer.community.name }}-golden font-size2">Ziko {{ offer.name[_language] }}</view>

            </view>

            <view class="middle-box">
              <view class="middle-box-top">
                <view class="to_win_button bgc-color-{{ offer.community.name }}"><text class="to_win_big_text">3 {{ _t.chances }} </text> {{ _t.to_win }}</view>
                <view class="draws-locked-button nunito_400">
                  3 {{ _t.draws }} {{ _t.locked }}
                </view>
              </view>
              <view class="Progress">
                <view class="middle-box-center">
