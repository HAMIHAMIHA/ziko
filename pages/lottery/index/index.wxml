                </view>
              </view>
              <view class="middle-box-bottom">
                <view class="address">
                  <text class="icon icon-ticket"></text>
                  <text class="tickets2 nunito_700">2 {{ _t.tickets }}</text>
                </view>
                <view>
                  <text class="time_remaining nunito_400">{{ _t.time_remaining }}</text>
                  <text class="big_time_remaining color-{{ offer.community.name }}">1<text class="time_remaining">{{ _t.day }}</text>28: 30</text>
                </view>
              </view>
            </view>

            <view class="bottom-box">
              <view class="bottom-box-text color-{{ offer.community.name }}-golden">{{ _t.access_the_offer }}</view>
              <view class="prizes-num"> 21 {{ _t.prizes }}</view>
