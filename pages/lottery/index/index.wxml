<view class="container">
  <!-- List View -->
  <view class="first-show" wx:if="{{ first_show }}">
    <image src="../../../assets/images/zikoland.svg" class="image-size"></image>
    <view class="machine-pure-box machine-pure-box-cellar" bindanimationiteration="animationiteration" bindanimationend="animationend">
      <view class="machine-light-box machine-light-box-cellar">
        <view class="vertical-light">
          <view class="white-round"></view>
          <view class="white-round"></view>
          <view class="white-round"></view>
          <view class="white-round"></view>
          <view class="white-round"></view>
        </view>
        <view class="light-box-light">
          <view class="broadwise-light">
            <view class="white-round"></view>
            <view class="white-round"></view>
            <view class="white-round"></view>
            <view class="white-round"></view>
          </view>
          <view class="move-items">
            <scroll-view class="scroll-box" scroll-y scroll-into-view="{{ showid1 }}" scroll-with-animation>
              <view wx:for="{{ lottery_content }}" wx:for-item="content" wx:key="index" id="{{ content.numb }}" class="content-move-box">
                <image src="{{ content.src }}" class="content-image"></image>
              </view>
            </scroll-view>
            <scroll-view class="scroll-box" scroll-y scroll-into-view="{{ showid2 }}" scroll-with-animation>
              <view wx:for="{{ lottery_content }}" wx:for-item="content" wx:key="index" id="{{ content.numb }}" class="content-move-box">
                <image src="{{ content.src }}" class="content-image"></image>
              </view>
            </scroll-view>
            <scroll-view class="scroll-box" scroll-y scroll-into-view="{{ showid3 }}" scroll-with-animation>
              <view wx:for="{{ lottery_content }}" wx:for-item="content" wx:key="index" id="{{ content.numb }}" class="content-move-box">
                <image src="{{ content.src }}" class="content-image"></image>
              </view>
            </scroll-view>
          </view>
          <view class="broadwise-light">
            <view class="white-round"></view>
            <view class="white-round"></view>
            <view class="white-round"></view>
            <view class="white-round"></view>
          </view>
        </view>
        <view class="vertical-light">
          <view class="white-round"></view>
          <view class="white-round"></view>
          <view class="white-round"></view>
          <view class="white-round"></view>
          <view class="white-round"></view>
        </view>
      </view>
    </view>
    <view class="ziko_lottery gilroy_700">{{ _t.ziko_lottery }}</view>
    <view class="tiny-text nunito_500">{{ _t.lorem_ipsum_dolor }}</view>
    <view class="button-got-it gilroy_700" bindtap="close_firstshow">{{ _t.got_it }}</view>
  </view>
  <view class="list">
    <!-- Scroll Menu -->
    <view class="h-scroll_container scroll-menu_community">
      <scroll-view class="h-scroll" scroll-x="true">
        <block wx:for="{{ _filters.list }}" wx:key="filter_group" wx:for-item="filter">
          <view class="h-scroll_item {{ filter.class_name }} {{ filter_group == filter.filter_group ? ' selected' : '' }}" bindtap="filterOffers" data-filter_type="list" data-filter_group="{{ filter.filter_group }}" data-filter_id="{{ filter.id }}">
            <view class="icon icon-{{ filter.icon }}"></view>
          </view>
        </block>
      </scroll-view>
    </view>

    <!-- List Contents -->
    <!-- <dateFilter
      id="list_date_filters"
      days="{{ days }}"
      bind:filterOffers="filterOffers"
    ></dateFilter> -->
    <view class="choose_box">
      <view class="basic-button nunito_700 {{ lottery_selected == 0 ? 'select-now' : '' }}" bindtap="lottery_select" data-info='0'>{{ _t.still_a_chance }}</view>
      <view class="basic-button nunito_700 {{ lottery_selected == 1 ? 'select-now' : '' }}" bindtap="lottery_select" data-info='1'>{{ _t.past_luck }}</view>
    </view>

    <view class="offers_container">
      <view class="gilroy_700 offers_list" wx:if="{{ offers.length == 0 }}">
        {{ _t.no_offers }}
      </view>

      <view class="gilroy_700 offers_list">
        <!-- Card for each offer -->
        <view class="offer_container" wx:for="{{ offers }}" wx:for-item="offer" wx:key="id" bindtap="toLottery" data-community="{{ offer.community.id }}" data-offer-id="{{ offer.id }}">
          <!-- Banner image of card -->
          <!-- <view class="offer-banner">
            <view class="offer-banner_image">
              <image src="{{ offer.banner }}" mode="widthFix" lazy-load="true"></image>
            </view>
          </view> -->
          <!-- End of banner -->

