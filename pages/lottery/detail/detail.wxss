/* Remaining Time */
.countdown {
  background: #11141B;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
}

.countdown button:not([size=mini]).share-btn {
  width: fit-content;
  margin: 0;
  padding: 0;
  background: transparent;
  color: #5C6B77;
  font-size: 34rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}
/* End of Remaining Time */

/* Offer Info */
.offer__info {
  padding: 48rpx 0;
  background: #11141B;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  text-align: center;
}

.offer__info .tickets {
  display: flex;
  align-items: center;
  justify-content: center;
}
/* End of Offer Info */
