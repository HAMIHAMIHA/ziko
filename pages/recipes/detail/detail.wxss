.recipe__container {
  box-sizing: border-box;
}

/* Recipe General Data */
.recipe-general__container {
  padding: 24rpx 30rpx;
  text-align: center;
  border-bottom: 1px solid #424756;
  display: flex;
  column-gap: 32rpx;
  position: relative;
}

.recipe-general__container .recipe-general__label {
  padding-bottom: 6rpx;
  color: #9198AB;
  font-size: 24rpx;
  line-height: 30rpx;
}

.recipe-general__container .recipe-general__value {
  font-size: 28rpx;
  line-height: 32rpx;
}

.container .share {
  padding: 28rpx;
  font-size: 34rpx;
  position: absolute;
  right: 34rpx;
  top: 100%;
  transform: translateY(-50%);
}
/* End of Recipe General Data */

/* Recipe Detail */
.recipe-detail__container {
  width: 100%;
  padding: 34rpx 30rpx 64rpx;
  box-sizing: border-box;
}

.recipe-detail__container .recipe-detail__title {
  max-width: 80%;
  font-size: 32rpx;
  line-height: 48rpx;
}

.recipe-detail__description .rich-img,
.recipe-detail__description .image-wrap {
  max-width: 100%;
}
/* End of Recipe Detail */

/* Offer List */
.offer-container {
  padding: 32rpx 0 calc(48rpx + var(--env-));
  border-top: 1px solid #EBEBEB;
}

.offer-container .title {
  padding-bottom: 48rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  letter-spacing: 0.3em;
}

.offer-container .btn-primary {
  margin: auto;
  margin-top: 48rpx;
  text-align: center;
}
/* End of Offer List */
