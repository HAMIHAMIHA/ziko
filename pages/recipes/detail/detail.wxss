.recipe__container {
  box-sizing: border-box;
}

.disabled {
  pointer-events: none;
}

/* Recipe General Data */
.recipe-general__container {
  padding: 24rpx 30rpx;
  text-align: center;
  border-bottom: 1px solid #424756;
  display: flex;
  column-gap: 32rpx;
  position: relative;
}

.recipe-general__container .recipe-general__label {
  padding-bottom: 6rpx;
  color: #9198AB;
  font-size: 24rpx;
  line-height: 30rpx;
}

.recipe-general__container .recipe-general__value {
  font-size: 28rpx;
  line-height: 32rpx;
}

.container .float-btn {
  padding: 28rpx;
  font-size: 34rpx;
  position: absolute;
  transform: translateY(-50%);
}

.container .favourite {
  right: 34rpx;
  top: 100%;
}

.container .favourite.fav {
  color: #F74A5C;
}

@keyframes unfav-animate {
  0% { transform: scale(1); }
  50% { transform: scale(0); }
  100% { transform: scale(1); }
}

.container .favourite .icon {
  animation-name: unfav-animate;
  animation-duration: 0.3s;
}

@keyframes fav-animate {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

.container .favourite.fav .icon {
  animation-name: fav-animate;
  animation-duration: 0.3s;
}

.container .share {
  /* right: 52rpx; */
  right: 34rpx; /* TEMP */
  top: 100%;
  /* transform: translate(-100%, -50%); */
  transform: translate(0, -50%); /* TEMP */
}
/* End of Recipe General Data */

/* Recipe Detail */
.recipe-detail__container {
  width: 100%;
  padding: 34rpx 30rpx 64rpx;
  box-sizing: border-box;
}

.recipe-detail__container .recipe-detail__title {
  max-width: 80%;
  padding-bottom: 30rpx;
  font-size: 40rpx;
  line-height: 48rpx;
}

.recipe-detail__description .rich-img,
.recipe-detail__description .image-wrap {
  max-width: 100%;
}
/* End of Recipe Detail */

/* Offer List */
.offer-container {
  padding-bottom: calc(48rpx + var(--env-));
}

.offer-list {
  padding: 32rpx 0 48rpx;
  border-top: 1px solid #EBEBEB;
}

.offer-container .title {
  padding-bottom: 48rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  letter-spacing: 0.3em;
}

.offer-container .btn-primary {
  margin: auto;
  text-align: center;
}
/* End of Offer List */