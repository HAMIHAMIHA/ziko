<view class="container">
  <!-- Search -->
  <view class="search-container">
    <view class="search-input">
      <text class="icon icon-search"></text>
      <input type="search" placeholder="{{ _t.try_text }}" />
    </view>
    <button class="filter-btn icon icon-filters"></button>
  </view>
  <!-- End of Search -->

  <!-- Filter List -->
  <view class="filter-container">
    <block wx:for="{{ filters }}" wx:key="_id" wx:for-item="filter">
      <view class="filter-item">
        <text class="filter-text">{{ filter.name[_t._language] }}</text>
        <text class="filter-icon icon icon-x"></text>
      </view>
    </block>
  </view>
  <!-- End of Filter List -->

  <!-- Offer Recipes -->
  <view class="list_container">
    <view class="offer-group recipe-group">
      <recipes id="recipes-component" items="{{ recipes }}" _t="{{ _t }}"></recipes>
    </view>
  </view>
  <!-- End of Offer Recipes -->

  <!-- Filter -->
  <view class="filter__container">
    <!-- Filter Top -->
    <view class="filter-top">
      <button class="filter-back">
        <text class="icon icon-arrow-left"></text>
      </button>
      <button class="filter-reset">
        {{ _t.reset_filters }}
      </button>
    </view>
    <!-- End of Filter Top -->

    <!-- Filter List -->
    <view class="filter-list">
      <block wx:for="{{ filter_categories }}" wx:for-item="category">
        <view class="filter__name">{{ category.name[_language] }}</view>
        <block wx:for="{{ category.tags }}" wx:for-item="tag">
          <view class="filter__tag">{{ tag.name[_language] }}</view>
        </block>
      </block>
    </view>
    <!-- End of Filter List -->
  </view>
  <!-- End of Filter -->
</view>