.address-list:not(.container-btn-bottom) {
  padding-bottom: var(--env-);
}

.white-box {
  background: unset;
  padding: 0;
}

.cards {
  height: calc(100vh - 180rpx - var(--env-));
  overflow: scroll;
}

.card {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: baseline;

  background: #252831;

  box-sizing: border-box;
  transition: all 0.3s ease-in-out;

  padding: 32rpx 30rpx;
}

.card+.card {
  margin-top: 16rpx;
}

