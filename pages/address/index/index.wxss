.selected .card.select {
  background: #3F4250;
}

.address-name-star {
  margin-bottom: 30rpx;
  display: flex;
}

.address-name {
  /* padding-bottom: 8rpx; */
  padding: 12rpx 16rpx 8rpx 35rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  transition: all 0.3s ease-in-out;
  background-color: rgba(255, 255, 255, 0.1);
  margin-left: -30rpx;
}

.address-name-star .icon-star-gold {
  font-size: 40rpx;
  line-height: 40rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

.address-name-star .icon-star-gray {
  font-size: 40rpx;
  line-height: 40rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

.address-name-star .icon-star-gold text {
  display: block;
  padding-left: 10rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  height: 40rpx;
  color: #D4B106;
}

.address-detail {
  font-size: 32rpx;
  line-height: 32rpx;
  transition: all 0.3s ease-in-out;
  padding: 12rpx 0;
}

.selected .card:not(.select) .address-name,
.selected .card:not(.select) .address-detail {
  opacity: 0.4;
}

.city-detail {
  padding-top: 8rpx;
  color: var(--grey-);
}

.actions {
  display: flex;
  gap: 20rpx;
}

.actions .icon {
  padding: 0;
  font-size: 32rpx;
}

.btn-outline_container {
  position: fixed;
  bottom: calc(30rpx + var(--env-));
  width: calc(100% - 60rpx);

  padding: 0;
  margin: 0 30rpx;
}

.btn-outline_container .btn-outline {
  line-height: 50rpx;
}

.container-btn-bottom .btn-bottom button.disabled {
  background: #d9d9da;
}

.icon-ziko {
  margin-top: 160rpx;
  font-size: 200rpx;
  text-align: center;
  color: #8C8C8C;
}

.first-paragraph {
  font-size: 34rpx;
  text-align: center;

  padding-top: 90rpx;
}

.second-paragraph {
  font-size: 28rpx;
  text-align: center;
  color: #BFBFBF;

  padding: 30rpx 90rpx 90rpx 90rpx;
}