<view class="container container-grey container-btn-bottom address-list">
  <view class="white-box details_container">
    <view class="detail" wx:for="{{ address }}" wx:key="*this">
      <view class="address_container">
        <view class="nunito_700 address-name">{{ _t.address + ' ' + count }} 1</view>
        <view class="address-detail">水电路1200弄3号401室</view>
        <view class="contact-detail">Contact name</view>
        <view class="contact-detail">132156519165</view>
      </view>
      <navigator class="icon icon-edit btn-icon" hover-class="none" url="{{ _routes.address_detail + '?id=' + item.id }}"></navigator>
    </view>
  </view>

  <view class="btn-outline_container">
    <navigator class="btn-outline nunito_600" hover-class="none" url="{{ _routes.address_detail }}">{{ '+ ' + _t.add_new_address }}</navigator>
  </view>

  <view class="btn-bottom" wx:if="{{ _setting.selecting }}">
    <button class="nunito_600" hover-class="none" bindtap="select">{{ _t.select }}</button>
  </view>
</view>