<view class="container container-grey address-list{{ _setting.selecting ? ' container-btn-bottom' : ''}}">
  <view class="white-box details_container{{ select_index >= 0 ? ' selected' : '' }}">
    <view
      class="detail{{ select_index == index ? ' select' : '' }}"
      wx:for="{{ user.addresses }}"
      wx:for-item="address"
      wx:key="_id"
      bindtap="selectAddress"
      data-index="{{ index }}"
    >
      <view class="address_container">
        <view class="address-name-star">
          <view class="nunito_500 address-name">{{ _t.address + ' ' + (index + 1) }}</view>
          <view wx:if="{{!address.default}}" class="icon icon-star-gold"><text class="nunito_500">{{_t.default_selection}}</text></view>
          
        </view>
        <view class="address-detail nunito_400">{{ address.detailedAddress }}</view>
        <view class="contact-detail">{{ address.contact || address.contact != null ? address.contact : '' }}</view>
        <view class="contact-detail">{{ address.phone }}</view>
      </view>
      <navigator class="icon icon-edit btn-icon" hover-class="none" url="{{ _routes.address_detail + '?id=' + address._id }}"></navigator>
    </view>
  </view>

  <view class="btn-outline_container" wx:if="{{ _setting.selecting }}">
    <navigator class="btn-outline gilroy_700" hover-class="none" url="{{ _routes.address_detail }}">{{ '+ ' + _t.add_new_address }}</navigator>
  </view>

  <view class="btn-bottom"  wx:else>
    <button class="nunito_600" bindtap="select">{{ _t.select }}</button>
  </view>
</view>

<lottery-draw id="lottery_modal"></lottery-draw>