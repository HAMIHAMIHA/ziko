.container.container-btn-bottom {
  min-height: calc(100vh - var(--env-));
}

.header {
  padding-bottom: 10rpx;
}

.address_container {
  background-color: #0A0B12;
}

.type-container {
  display: flex;
  justify-content: space-between;

  background-color: #252831;
  border: 2rpx solid #252831;
  border-radius: 16rpx;

  padding: 0 30rpx;
  margin: 20rpx 0;
}

.error-field-0 .field-0 {
  border-color: #FF4040;
}

.detail_label_name.line-height {
  line-height: 48rpx;
  font-size: 28rpx;
  padding: 24rpx 0;
}

.detail_input.no-border-bottom {
  border-bottom: 0;
  line-height: 38rpx;
  font-size: 28rpx;

  margin: auto 0 auto auto;
}

.no-border-bottom .icon-arrow {
  padding-top: 6rpx;
}

.inputs_container {
  padding: 0;
}

.btns {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
}

.btn-bottom {
  width: 100%;
}

.btn-bottom+.btn-bottom {
  margin-top: 28rpx;
}

.container-btn-bottom .btn-bottom button {
  position: unset;
  left: 0;
  bottom: 0;
}

.btn-bottom .cancel-button {
  border: 1px solid #F0F0F0;
  border-radius: 4px;
  background-color: #11141B !important;
  color: #FFFFFF !important;
}

.btn-bottom .white-background-black-text {
  background-color: #F0F0F0 !important;
  color: #1F1F1F !important;
}

.detail_content_box {
  padding: 17rpx 0;
  font-size: 28rpx;
}

.detail_label_name {
  padding: 4rpx 0;
}

.detail_input {
  width: 100%;
  height: 64rpx;
  display: flex;
  border-bottom: 2rpx solid #545764;
  box-sizing: border-box;
}

.detail_input .input {
  width: 100%;
  margin: auto;
  border: 0;
}

.detail_input .picker {
  position: relative;
}

.detail_input .picker_text {
  white-space: nowrap;
  width: calc(100% - 24rpx - 16rpx);
  height: 34rpx;
}

.detail_input .picker_text .icon.icon-arrow {
  color: #8C8C8C;
}

.detail_input.no-border-bottom .picker {
  width: auto;
  margin: auto 40rpx auto auto;
}

.detail_input.no-border-bottom .picker_text .icon.icon-arrow {
  right: -40rpx;
  color: #FFFFFF;
}

.grey {
  color: #8C8C8C !important;
}

.container.container-btn-bottom {
  padding-bottom: 0rpx;
}

.pad-container {
  margin-left: 20rpx;
}

.flex-container {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.icon-star-gold,
.icon-star-gray {
  display: flex;
  align-items: center;
  padding-top: 14rpx;
}

.icon-star-gold text,
.icon-star-gray text {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #D9D9D9 !important;
  padding-left: 10rpx;
  padding-top: 6rpx;
}
