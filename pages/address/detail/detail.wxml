      <view class="details_container textarea_container">
        <view class="detail_content_box">
          <view class="detail_label_name">{{ _t.comment }}</view>
          <view class="detail_input_content">
            <view class="input">
              <textarea
                class="textarea"
                auto-height="true"
                name="comment"
                placeholder="{{_t.any_special_requests}}"
                focus="{{ _focus == 'comment' ? true : false }}"
                value="{{ address.comment }}"
                type="text"
              >
              </textarea>
            </view>
          </view>
        </view>
      </view>
    </view>
    <!-- End of Address Form -->

    <!-- Select Button -->
    <view wx:if="{{!_t.options_judge}}" class="btn-bottom">
      <button class="btn-outline inter_600 cancel-button" formType="reset">{{ _t.cancel }}</button>
    </view>
    <!-- End of Select Button -->

    <!-- Delete Button -->
    <view wx:else class="btn-bottom">
      <button class="btn-outline inter_600 cancel-button" formType="reset">{{ _t.delete }}</button>
    </view>
    <!-- End of Delete Button -->

    <!-- Submit Button -->
    <view class="btn-bottom">
      <button class="gilroy_700 white-background-black-text" formType="submit">{{ _t.save }}</button>
    </view>
    <!-- End of Submit Button -->
  </form>
</view>

