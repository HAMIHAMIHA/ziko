        <view class="detail_input_content no-border-bottom">
          <picker
            class="input picker"
            name="type"
            placeholder="{{_t.please_select}}"
            range="{{ _picker.address_type }}"
            value="{{ _picker_selected }}"
            bindchange="bindPickerChange"
          >
            <view wx:if="{{!_t.address_type[address.type]}}" class="picker_text greycolor">{{ _t.please_select}}<text
              class="icon icon-arrow"></text>
            </view>
            <view wx:else class="picker_text">{{ _t.address_type[address.type] || _t.please_select}}<text
              class="icon icon-arrow"></text>
            </view>
          </picker>
        </view>
      </view>

