      </view>  -->


      <view class="details_container inputs_container field-5">
        <view class="detail_content_box">
          <view class="detail_label_name">{{ _t.province}}</view>
          <view class="detail_input_content input_goto">
            <navigator class="input picker" hover-class="none" url="{{ area ? _routes.address_areas + '?id=' + area.id : _routes.address_areas }}">
              <view wx:if="{{ !area.name }}" class="picker_text greycolor">{{ _t.please_select_your_province}}<text class="icon icon-arrow"></text></view>
              <view wx:else class="picker_text">{{ area.name }}<text class="icon icon-arrow"></text></view>
            </navigator>
          </view>
        </view>
      </view>

      <view class="details_container inputs_container field-2">
        <view class="detail_content_box">
          <view class="detail_label_name">{{ _t.city }}</view>
          <view class="detail_input_content input_goto">
              <picker
              class="input picker"
              name="type"
              range="{{ _picker.address_type }}"
              value="{{ _picker_selected }}"
              bindchange="bindPickerChange"
              >
              <view wx:if="{{!_t.address_type[address.type]}}" class="picker_text greycolor">{{ _t.please_select_your_city}}<text class="icon icon-arrow"></text></view>              
              <view wx:else class="picker_text">{{ _t.address_type[address.type]}}<text class="icon icon-arrow"></text></view>
              </picker>
            <!-- <view class="input">
              <input
                name="city"
                value="{{ address.city }}"
