<view class="container container-grey container-btn-bottom address-detail">
  <!-- Address Form -->
  <view class="white-box address_container">
    <view class="nunito_700 header">{{ _t.address + count }}</view>

    <view class="details_container inputs_container">
      <view class="detail">
        <view class="detail_label">{{ _t.type }}Type</view>
        <view class="detail_input">
          <picker class="input" bindchange="bindPickerChange" value="{{ index }}" range="{{ _picker.address_type }}">
            <view class="flex-between">
              <text>{{ _t.address_type[address.type] }}</text>
              <text class="icon icon-arrow"></text>
            </view>
          </picker>
        </view>
      </view>
    </view>

    <view class="details_container inputs_container">
      <view class="detail">
        <view class="detail_label">{{ _t.city }}City</view>
        <view class="detail_input">
          <view class="input">
            <input value="{{ address.city }}"></input>
          </view>
        </view>
      </view>
    </view>

    <view class="details_container inputs_container">
      <view class="detail">
        <view class="detail_label">{{ _t.area }}Area</view>
        <view class="detail_input">
          <view class="input">
            <input value="{{ address.area }}"></input>
          </view>
        </view>
      </view>
    </view>

    <view class="details_container inputs_container">
      <view class="detail">
        <view class="detail_label">{{ _t.zipcode }}Zipcode</view>
        <view class="detail_input">
          <view class="input">
            <input value="{{ address.zipcode }}"></input>
          </view>
        </view>
      </view>
    </view>

    <view class="details_container inputs_container">
      <view class="detail">
        <view class="detail_label">{{ _t.address }}Address</view>
        <view class="detail_input">
          <view class="input">
            <input value="{{ address.address }}"></input>
          </view>
        </view>
      </view>
    </view>

    <view class="details_container inputs_container">
      <view class="detail">
        <view class="detail_label">{{ _t.phone_no }}Phone no</view>
        <view class="detail_input">
          <view class="input">
            <input value="{{ address.phone }}"></input>
          </view>
        </view>
      </view>
    </view>

    <view class="details_container textarea_container">
      <view class="detail">
        <view class="detail_label">{{ _t.comment }}Comment</view>
        <view class="detail_input">
          <view class="input">
            <textarea class="textarea" auto-height="true" value="{{ address.comment }}" type="text"></textarea>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- End of Address Form -->

  <!-- Delete Button -->
  <view class="btn-outline_container">
    <button class="btn-outline nunito_600" hover-class="none" bindtap="updateAddress" data-action="delete">{{ _t.delete }}delete</button>
  </view>
  <!-- End of Delete Button -->

  <!-- Submit Button -->
  <view class="btn-bottom">
    <button class="nunito_600" hover-class="none" bindtap="updateAddress" data-action="save">{{ _t.save }}Save</button>
  </view>
  <!-- End of Submit Button -->
</view>