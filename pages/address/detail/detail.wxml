<view class="container container-grey container-btn-bottom address-detail">
  <!-- Address Form -->
  <form class="{{ error }}" catchsubmit="updateAddress" catchreset="updateAddress">
      <view class="white-box address_container">
        <view class="nunito_700 header">{{ _t.address + ' ' + (_count + 1) }}</view>

        <view class="details_container inputs_container field-0">
          <view class="detail">
            <view class="detail_label">{{ _t.type }}</view>
            <view class="detail_input">
              <picker
                class="input picker"
                name="type"
                range="{{ _picker.address_type }}"
                value="{{ _picker_selected }}"
                bindchange="bindPickerChange"
              >
                <view class="picker_text">{{ _t.address_type[address.type] }}</view>
                <text class="icon icon-arrow"></text>
              </picker>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container field-1">
          <view class="detail">
            <view class="detail_label">{{ _t.city }}</view>
            <view class="detail_input">
              <view class="input">
                <input
                  name="city"
                  value="{{ address.city }}"
                  confirm-type="next"
                  confirm-hold="true"
                  data-next_item="area"
                  bindconfirm="next"
                >
                </input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container field-2">
          <view class="detail">
            <view class="detail_label">{{ _t.area }}</view>
            <view class="detail_input">
              <view class="input">
                <input
                  name="area"
                  value="{{ address.area }}"
                  confirm-type="next"
                  confirm-hold="true"
                  focus="{{ _focus == 'area' ? true : false }}"
                  data-next_item="zipcode"
                  bindconfirm="next"
                >
                </input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container">
          <view class="detail">
            <view class="detail_label">{{ _t.zipcode }}</view>
            <view class="detail_input">
              <view class="input">
                <input
                  name="zipcode"
                  value="{{ address.zipcode }}"
                  confirm-type="next"
                  confirm-hold="true"
                  focus="{{ _focus == 'zipcode' ? true : false }}"
                  data-next_item="address"
                  bindconfirm="next"
                >
                </input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container field-3">
          <view class="detail">
            <view class="detail_label">{{ _t.address }}</view>
            <view class="detail_input">
              <view class="input">
                <input
                  name="address"
                  value="{{ address.address }}"
                  confirm-type="next"
                  confirm-hold="true"
                  focus="{{ _focus == 'address' ? true : false }}"
                  data-next_item="phone"
                  bindconfirm="next"
                >
                </input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container field-4">
          <view class="detail">
            <view class="detail_label">{{ _t.phone_no }}</view>
            <view class="detail_input">
              <view class="input">
                <input
                  name="phone"
                  value="{{ address.phone }}"
                  confirm-type="next"
                  confirm-hold="true"
                  focus="{{ _focus == 'phone' ? true : false }}"
                  data-next_item="comment"
                  bindconfirm="next"
                >
                </input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container textarea_container">
          <view class="detail">
            <view class="detail_label">{{ _t.comment }}</view>
            <view class="detail_input">
              <view class="input">
                <textarea
                  class="textarea"
                  auto-height="true"
                  name="comment"
                  focus="{{ _focus == 'comment' ? true : false }}"
                  value="{{ address.comment }}"
                  type="text"
                >
                </textarea>
              </view>
            </view>
          </view>
        </view>
    </view>
    <!-- End of Address Form -->

    <!-- Delete Button -->
    <view class="btn-outline_container">
      <button class="btn-outline nunito_600" formType="reset">{{ _t.delete }}</button>
    </view>
    <!-- End of Delete Button -->

    <!-- Submit Button -->
    <view class="btn-bottom">
      <button class="nunito_600" formType="submit">{{ _t.save }}</button>
    </view>
    <!-- End of Submit Button -->
  </form>
</view>