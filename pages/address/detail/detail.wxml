<view class="container container-grey container-btn-bottom address-detail">
  <!-- Address Form -->
  <form class="{{ error }}" bindsubmit="updateAddress" bindreset="updateAddress">
    <view class="white-box address_container">
      <!-- <view class="nunito_700 header">{{ _t.address + ' ' + (_count + 1) }}</view> -->

      <view class="type-head-box nunito_500">
        <view class="detail_label_name line-height">{{ _t.type }}</view>
        <view class="detail_input_content no-border-bottom">
          <picker
              class="input picker"
              name="type"
              placeholder="{{_t.please_select}}"
              range="{{ _picker.address_type }}"
              value="{{ _picker_selected }}"
              bindchange="bindPickerChange"
            >
            <view wx:if="{{!_t.address_type[address.type]}}" class="picker_text greycolor">{{ _t.please_select}}<text class="icon icon-arrow"></text></view>
              <view wx:else class="picker_text">{{ _t.address_type[address.type] || _t.please_select}}<text class="icon icon-arrow"></text></view>
            </picker>
        </view>
      </view>

 <!-- <view class="details_container inputs_container field-0">
        <view class="detail_content_box">
