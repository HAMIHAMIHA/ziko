            <view class="input">
              <input
                name="detailedAddress"
                placeholder="{{_t.please_enter_your_address}}"
                value="{{ address.detailedAddress }}"
                confirm-type="next"
                confirm-hold="true"
                focus="{{ _focus == 'detailedAddress' ? true : false }}"
