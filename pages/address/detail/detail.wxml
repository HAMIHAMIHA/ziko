      <!--new city  -->
      <view class="details_container inputs_container">
        <view class="detail_content_box">
          <view class="detail_label_name">{{ _t.city }}</view>
          <view class="detail_input_content input_goto">
            <picker
              class="input picker"
              name="city"
              range="{{ _areas[0].children[_selected[2]].children }}"
              range-key="label"
              value="{{ _selected[3] }}"
              data-picker_level="{{3}}"
              bindchange="updatePicker"
            >
              <view wx:if="{{!city}}" class="picker_text greycolor">
