<view class="container container-grey container-btn-bottom address-detail">
  <!-- Address Form -->
  <form class="{{ error }}" catchsubmit="updateAddress" catchreset="updateAddress">
      <view class="white-box address_container">
        <view class="nunito_700 header">{{ _t.address + ' ' + (_count + 1) }}</view>

        <view class="details_container inputs_container type">
          <view class="detail">
            <view class="detail_label">{{ _t.type }}</view>
            <view class="detail_input">
              <picker
                class="input picker"
                name="type"
                range="{{ _picker.address_type }}"
                value="{{ _picker_selected }}"
                bindchange="bindPickerChange"
              >
                <view class="picker_text">{{ _t.address_type[address.type] }}</view>
                <text class="icon icon-arrow"></text>
              </picker>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container city">
          <view class="detail">
            <view class="detail_label">{{ _t.city }}</view>
            <view class="detail_input">
              <view class="input">
                <input name="city" value="{{ address.city }}"></input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container area">
          <view class="detail">
            <view class="detail_label">{{ _t.area }}</view>
            <view class="detail_input">
              <view class="input">
                <input name="area" value="{{ address.area }}"></input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container">
          <view class="detail">
            <view class="detail_label">{{ _t.zipcode }}</view>
            <view class="detail_input">
              <view class="input">
                <input name="zipcode" value="{{ address.zipcode }}"></input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container address">
          <view class="detail">
            <view class="detail_label">{{ _t.address }}</view>
            <view class="detail_input">
              <view class="input">
                <input name="address" value="{{ address.address }}"></input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container inputs_container phone">
          <view class="detail">
            <view class="detail_label">{{ _t.phone_no }}</view>
            <view class="detail_input">
              <view class="input">
                <input name="phone" value="{{ address.phone }}"></input>
              </view>
            </view>
          </view>
        </view>

        <view class="details_container textarea_container">
          <view class="detail">
            <view class="detail_label">{{ _t.comment }}</view>
            <view class="detail_input">
              <view class="input">
                <textarea class="textarea" name="comment" auto-height="true" value="{{ address.comment }}" type="text"></textarea>
              </view>
            </view>
          </view>
        </view>
    </view>
    <!-- End of Address Form -->

    <!-- Delete Button -->
    <view class="btn-outline_container">
      <button class="btn-outline nunito_600" formType="reset">{{ _t.delete }}</button>
    </view>
    <!-- End of Delete Button -->

    <!-- Submit Button -->
    <view class="btn-bottom">
      <button class="nunito_600" formType="submit">{{ _t.save }}</button>
    </view>
    <!-- End of Submit Button -->
  </form>
</view>