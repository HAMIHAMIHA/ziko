  <view class="white-box order-details_container timeline">
    <block wx:for="{{ order.status }}" wx:key="index" wx:for-item="status">
      <view class="timeline__detail">
        <view class="timeline__dot"></view>
        <view class="timeline__content">
          <text class="timeline__date">{{ status.date }}</text>
          <text class="nunito_600 timeline__status">{{ _t.order_status[status.status] }}W status</text>
        </view>
      </view>
    </block>
  </view>

  <view class="white-box contact-box">
    <view>{{ _t.problem_with_order }}Is there a problem with your order?</view>
    <view class="contact-button_container">
      <button class="contact-button" hover-class="none" open-type="contact">
        <text class="icon icon-headset"></text>
        <text class="nunito_600">Contact our customer hero!</text>
      </button>
    </view>
  </view>
</view>