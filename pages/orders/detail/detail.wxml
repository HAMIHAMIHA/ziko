      <view class="detail_value">132156519165</view>
    </view>

    <view class="detail">
      <text class="nunito_600 detail_label">Contact</text>
      <view class="detail_value">Contact person Name</view>
    </view>
  </view>

  <view class="white-box order-details_container">
    <view class="detail">
      <text class="nunito_600 detail_label">Fapiao</text>
      <view class="detail_value">address</view>
    </view>
  </view>

  <view class="white-box order-details_container">
