    <view class="white-box details_container inputs_container">
      <view wx:if="{{ fapiaotest }}" class="cartdetail checkbox-container fapiao">
        <view class="fapiao-title">
          <text class="detail_label">{{ _t.send_fapiao_to }}</text>
          <view wx:if="{{ fapiao }}" class="fapiao-checked checked-no">
            <view class="ball" bindtap="toggleCheck" data-key="fapiao"></view>
            <view class="no nunito_400" bindtap="toggleCheck" data-key="fapiao">{{ _t.no }}</view>
          </view>
          <view wx:else class="fapiao-checked checked-yes">
            <view class="yes nunito_400" bindtap="toggleCheck" data-key="fapiao">{{ _t.yes }}</view>
            <view class="ball" bindtap="toggleCheck" data-key="fapiao"></view>
          </view>

          <!-- <view class="checkbox{{ fapiao ? ' checked' : '' }}" bindtap="toggleCheck" data-key="fapiao">
            </view> -->
        </view>
        <view class="send-fapiao-content">
          {{ fapiao_content_test }}
        </view>
      </view>
      <view wx:else class="cartdetail">
        <text class="detail_label">{{ _t.send_fapiao_to }}</text>
        <view class="send-fapiao-to">
          <navigator hover-class="none" url="{{ _routes.fapiao + '?action=edit' }}">
            <text class="nunito_400">{{ _t.no_details_yet }}</text>
            <text class="icon icon-plus"></text>
          </navigator>
        </view>
      </view>
    </view>

    <!-- Available Ziko vouchers -->
    <view class="white-box ">
      <view class="gilroy_700 vouchers-title">{{ _t.available_ziko_vouchers }}</view>
      <!-- vouchers -->
      <scroll-view scroll-x="true" wx:if="{{ vouchers.length > 1 }}">
        <block wx:for="{{ vouchers }}" wx:key="id" wx:for-item="voucher" class="ticket_box">
          <image src="/assets/images/{{ voucher.community || 'kitchen' }}_ticket.svg" class="ticket_picture">
            <view class="box-content">
              <view class="box-content-left">
                <view class="black-box gilroy_700">
                  <text class="ziko-name">{{ _t.ziko }}</text>
                  <text class="nunito_700 ziko-community ziko-community-{{ voucher.community }}">{{ voucher.community ? ' ' + voucher.community : ' land ' }}</text>
                  <text class="ziko-community">{{ voucher.community2 ? ' / ' : " " }}</text>
                  <text class="nunito_700 ziko-community ziko-community-{{ voucher.community2 }}">{{ voucher.community2 ? voucher.community2 : " " }}</text>
                </view>
                <view class="nunito_400 received">
                  <text>{{ _t.received+': ' }}{{ voucher.createdAt }}</text>
                  <view>{{ _t.expires+': ' }}<text class="expires nunito_500">{{ voucher.expire_on }}</text></view>
                </view>

              </view>
              <view class="box-content-right">
                <view class="money gilroy_700">¥ {{ voucher.amount }}</view>
                <view class="circle-check"></view>
              </view>
            </view>
          </image>
        </block>
      </scroll-view>
      <view wx:if="{{ !vouchers.length > 1 }}">
        <image src="/assets/images/{{ voucher.community || 'kitchen' }}_ticket.svg" class="ticket_picture ticket_picture-alone">
          <view class="box-content box-content-alone">
            <view class="box-content-left">
              <view class="black-box black-box-alone gilroy_700">
                <text class="ziko-name">{{ _t.ziko }}</text>
                <text class="nunito_700 ziko-community ziko-community-{{ voucher.community }}">{{ voucher.community ? ' ' + voucher.community : ' land ' }}</text>
                <text class="ziko-community">{{ voucher.community2 ? ' / ' : " " }}</text>
                <text class="nunito_700 ziko-community ziko-community-{{ voucher.community2 }}">{{ voucher.community2 ? voucher.community2 : " " }}</text>
              </view>
              <view class="nunito_400 received">
                <text>{{ _t.received + ': ' }}{{ voucher.createdAt }}</text>
                <view>{{ _t.expires + ': ' }}<text class="expires nunito_500">{{ voucher.expire_on }}</text></view>
              </view>

            </view>
            <view class="box-content-right">
              <view class="money gilroy_700">¥ {{ voucher.amount }}</view>
              <view class="circle-check"></view>
            </view>
          </view>
        </image>
      </view>
    </view>

    <view class="contact-box">
      <view class="if-you-need content_text nunito_400">{{ _t.if_you_need_to }}
      </view>
      <view class="contact-button_container">
        <button class="contact-button" open-type="contact">
          <text class="icon icon-headset"></text>
          <text class="nunito_600">{{ _t.contact_customer_hero }}</text>
        </button>
      </view>
      <view class="contact-button_container">
        <button class="contact-button" bindtap="copyBoxShow">
          <text class="icon icon-wechat"></text>
          <text class="nunito_600">{{ _t.add_chef_ziko_on_wechat }}</text>
        </button>
      </view>
    </view>

    <view class="bottom-pay" bindtap="showLottery">
      <view class="remind">
        <text class="remind-text nunito_500">{{ _t.lottery_tickets_you_can_get }}</text>
        <text class="remind-number">{{ '+' + 3 + '' }}</text>
        <text class="icon icon-ticket"></text>
      </view>
      <!-- PAY -->
      <view class="nunito_700 cartdetail-flex">
        <view class="total-content">
          <view class="detail_label nunito_500 text-right">{{ _t.total }}</view>
          <!-- <text class="detail_result">¥{{ fixDecimals.toFix((_pay_set.finalFee - voucher.amount) * discount) }}</text> -->
<!--          <text class="detail_result_before">¥{{ voucher.amount_before }}</text>-->
          <text class="detail_result_before">¥{{ _pay_set.finalFee  + _pay_set.reducedTotal  }}</text>
<!--          <text class="detail_result">¥{{ voucher.price }}</text>-->
          <text class="detail_result">¥{{ _pay_set.finalFee }}</text>
        </view>
        <view class="pay-button">
          <button class="nunito_600 disabled" wx:if="{{ _pay_set.single && _pay_set.minimum.items && _pay_set.minimum.items > _pay_set.single }}">
            {{ _t.minimum + ': ' + _pay_set.minimum.items }}{{ _pay_set.minimum.items < 1 ? _t.item_units : _t.item_unit }} </button>
              <button class="nunito_600 disabled" wx:elif="{{ _pay_set.reducedTotal && _pay_set.minimum.price && _pay_set.minimum.price > _pay_set.reducedTotal }}">
                {{ _t.minimum + ': ¥' + _pay_set.minimum.price }}
              </button>
              <button class="nunito_600 disabled" wx:elif="{{ _pay_set.minimum.price && _pay_set.minimum.price > _pay_set.total }}">
                {{ _t.minimum + ': ¥' + _pay_set.minimum.price }}
              </button>
              <button class="nunito_600{{ _pay_set.pay_disabled ? ' disabled' : '' }}" formType="submit" wx:else>
                {{ _t.pay }}
              </button>
        </view>
      </view>
    </view>
  </form>
</view>


