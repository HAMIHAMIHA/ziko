<view class="container container-grey container-btn-bottom contact-detail">
  <!-- Contact Form -->
  <form class="{{ error }}" bindsubmit="updateContact" bindreset="updateContact">
    <view class="white-box address_container">
      <view class="nunito_700 header">{{ _t.contact + ' ' + (_count + 1) }}</view>

      <view class="details_container inputs_container field-0">
        <view class="detail">
          <view class="detail_label">{{ _t.contact }}</view>
          <view class="detail_input">
            <view class="input">
              <input
                name="name"
                value="{{ contact.name }}"
                confirm-type="next"
                confirm-hold="true"
                data-next_item="phone"
                bindconfirm="next"
              >
              </input>
            </view>
          </view>
        </view>
      </view>

      <view class="details_container inputs_container field-1">
        <view class="detail">
          <view class="detail_label">{{ _t.phone_no }}</view>
          <view class="detail_input">
            <view class="input">
              <input
                name="phone"
                value="{{ contact.phone }}"
                focus="{{ _focus == 'phone' ? true : false }}"
              >
              </input>
            </view>
          </view>
        </view>
      </view>
    </view>
    <!-- End of Contact Form -->

    <!-- Delete Button -->
    <view class="btn-outline_container">
      <button class="btn-outline nunito_600" formType="reset">{{ _t.delete }}</button>
    </view>
    <!-- End of Delete Button -->

    <!-- Submit Button -->
    <view class="btn-bottom">
      <button class="nunito_600" formType="submit">{{ _t.save }}</button>
    </view>
    <!-- End of Submit Button -->
  </form>
</view>

<lottery-draw id="lottery_modal"></lottery-draw>