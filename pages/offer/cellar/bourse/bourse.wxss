.offer-bourse {
  background: #0C0D10;
}

.bourse-label {
  padding-bottom: 48rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  letter-spacing: 0.2em;
  text-align: center;
}

/* Progress */
.progress__container .progress {
  margin-bottom: 48rpx;
  padding: 48rpx 24rpx;
  background: #21252F;
  text-align: center;
  border-radius: 8px;
}

.progress .progress__label {
  padding-bottom: 32rpx;
  font-size: 24rpx;
  line-height: 28rpx;
}

/* Progress - bar */
.progress-bar__container {
  height: calc(70rpx + 24rpx + 28rpx);
  display: flex;
  position: relative;
}

.progress-bar__container .progress-bar__values {
  left: var(--position-);
  position: absolute;
}

.progress-bar__container .progress-bar_first {
  text-align: left;
}

.progress-bar__container .progress-bar_last {
  transform: translateX(-100%);
}

.progress-bar__values .progress-axis {
  padding-bottom: 70rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  transform: translateX(-50%);
}

.progress-bar__values .progress-axis:after {
  content: "";
  width: 1px;
  height: 20rpx;
  margin: auto;
  padding-top: 4rpx;
  background: #9A9EA6;
  display: block;
}

.progress-bar__values.progress-bar_first .progress-axis {
  transform: translateX(0);
}

.progress-bar__values.progress-bar_first .progress-axis:after {
  margin-left: 0;
}

.progress-bar__values.progress-bar_last .progress-axis {
  transform: translateX(0);
}

.progress-bar__values.progress-bar_last .progress-axis:after {
  margin-right: 0;
}

.progress-bar__container .progress-label {
  width: fit-content;
  padding: 4rpx 6rpx;
  background: #909297;
  color: #000;
  font-size: 18rpx;
  line-height: 22rpx;
  white-space: nowrap;
  border-radius: 4px;
  position: absolute;
  left: var(--tag-position-);
  bottom: 0;
  transform: translateX(-50%);
}

.progress-label.unlocked {
  background: var(--color);
}

.progress-bar__container .progress-bar {
  /* width: calc(100vw - 30rpx - 30rpx - 24rpx - 24rpx); */
  width: 100%;
  height: 20rpx;
  background: #51596D;
  border-radius: 40px;
  position: absolute;
  bottom: calc(70rpx - 20rpx);
  box-sizing: border-box;
}

.progress-bar__container .progress-bar__progress {
  width: var(--filled-);
  max-width: 100%;
  height: 20rpx;
  overflow: hidden;
  background: transparent;
  border-radius: 40px;
  position: absolute;
  top: 0;
  left: 0;
}

.progress-bar__container .progress-bar__progress:before {
  content: "";
  width: calc(100vw - 24rpx - 24rpx - 30rpx - 30rpx);
  height: 20rpx;
  background: var(--bg-color-);
  border-radius: 40px;
  position: absolute;
  top: 0;
  left: 0;
}
/* End of Progress - bar */
