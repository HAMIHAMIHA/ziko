/* Progress arrow bar */
.arrow-progress-bar {
  height: 94rpx;
}

.arrow-steps {
  display: flex;
  flex-direction: row;

  width: 100%;
}

.arrow-steps .step {
  font-size: 24rpx;
  line-height: 64rpx;
  height: 64rpx;
  text-align: center;
  color: #FFFFFF;

  width: var(--barWidth-);
  float: left;
  position: relative;
  background-color: #2E3448;

  border-radius: 0 6rpx 6rpx 0;
}

.step+.step {
  margin-left: 16rpx;
}

.arrow-steps .step:after,
.arrow-steps .step:before {
  content: "";
  position: absolute;
  top: 0;
  right: -28rpx;
  width: 0;
  height: 0;
  border-top: 32rpx solid transparent;
  border-bottom: 32rpx solid transparent;
  border-left: 32rpx solid #2E3448;
  z-index: 6;
}

.arrow-steps .step:before {
  right: auto;
  left: -4rpx;
  border-left: 32rpx solid #0C0D10;
  z-index: 5;
}

.arrow-steps .step:first-child:before {
  border: none;
}

.arrow-steps .step.current:before {
  border-top: 32rpx solid #52EA9A;
  border-bottom: 33rpx solid #52EA9A;
}

.arrow-steps .step:first-child,
.arrow-steps .step:first-child .progress-current-bg {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.arrow-steps .step:last-child {
  /* border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx; */
  border-radius: 0 8rpx 8rpx 0;
}
.borderRadius{
  border-radius: 0 8rpx 8rpx 0;
}

.arrow-steps .step text.symbol {
  margin-left: 30rpx;
}

.arrow-steps .step.done {
  color: #595959;
  background-color: #52EA9A;
}

.arrow-steps .step.done:before {
  opacity: 1;
  content: "";
  position: absolute;
  /* top: -4rpx; */
  left: -2rpx;
  font-size: 24rpx;
}

.arrow-steps .step.done:after {
  border-left: 32rpx solid #52EA9A;
}

.arrow-steps .step.current {
  font-size: 40rpx;
  /* color: #2E3448; */
  background-color: #F0F0F0;
}

.current .symbol {
  color: #2E3448;
  position: absolute;
  transform: translate(-20rpx);
  left: 50%;
  z-index: 8;
}

.current .price {
  color: #2E3448;
  position: absolute;
  /* transform: translate(-12rpx); */
  left: 50%;
  z-index: 8;
}

.arrow-steps .step:first-child.current .symbol {
  color: #2E3448;
  position: absolute;
  transform: translate(-40rpx);
  left: 50%;
  z-index: 8;
}

.arrow-steps .step:first-child.current .price {
  color: #2E3448;
  position: absolute;
  transform: translate(-20rpx);
  left: 50%;
  z-index: 8;
}

.arrow-steps .step.current text.symbol {
  font-size: 22rpx;
  margin-left: 10rpx;
}

.arrow-steps .step.current:after {
  border-left: 32rpx solid #F0F0F0;
}

.arrow-steps .step.last-filled:after {
  border-left-color: #52EA9A;
}

.arrow-steps .step .num {
  position: absolute;
  right: -16rpx;
  bottom: -30rpx;

  font-size: 24rpx;
  line-height: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

.arrow-steps .step .num.from {
  left: 0;
  right: unset;
}

.arrow-steps .step .progress-current-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: var(--filled-);
  height: 100%;
  background: #52EA9A;
}

