.progress-bar__container .progress-bar {
  /* width: calc(100vw - 30rpx - 30rpx - 24rpx - 24rpx); */
  width: 100%;
  height: 20rpx;
  background: #51596D;
  border-radius: 40px;
  position: absolute;
  bottom: calc(70rpx - 20rpx);
  box-sizing: border-box;
}

.progress-bar__container .progress-bar__progress {
  width: var(--filled-);
  max-width: 100%;
  height: 20rpx;
  overflow: hidden;
  background: transparent;
  border-radius: 40px;
  position: absolute;
  top: 0;
  left: 0;
}

.progress-bar__container .progress-bar__progress:before {
  content: "";
  width: calc(100vw - 24rpx - 24rpx - 30rpx - 30rpx);
  height: 20rpx;
  background: var(--bg-color-);
  border-radius: 40px;
  position: absolute;
  top: 0;
  left: 0;
}

