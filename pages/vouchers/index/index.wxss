.container.container-btn-bottom {
  --scroll-menu-height-: calc(30rpx + 30rpx + 34rpx);
  --container-btn-bottom-height-: calc(34rpx + 24rpx + 24rpx + 24rpx + 36rpx + 48rpx);
  min-height: calc(100vh - 16rpx - var(--scroll-menu-height-) - var(--container-btn-bottom-height-) - var(--env-));
  padding-bottom: calc(var(--container-btn-bottom-height-) + var(--env-));
}

.scroll-menu_account {
  width: 100%;
  background: #2F323A;
  position: fixed;
  z-index: 1;
}

.content {
  --scroll-menu-height-: calc(30rpx + 30rpx + 34rpx);
  padding-top: calc(var(--scroll-menu-height-) + 16rpx);
}

.voucher_nav .voucher_text {
  width: fit-content;
  margin-top: 24rpx;
  text-decoration: underline;
}

.contact-box {
  padding: 48rpx 32rpx;
  text-align: center;
}

.container-btn-bottom .btn-bottom {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: calc(48rpx + var(--env-));
}

.container-btn-bottom .btn-bottom .contact-message {
  padding-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 34rpx;
}

.container-btn-bottom .btn-bottom button.contact-button {
  width: fit-content;
  margin: auto;
  padding: 24rpx 48rpx;
  left: unset;
  bottom: unset;
  position: relative;
}

.container-btn-bottom .btn-bottom button.contact-button .icon {
  padding-right: 16rpx;
}