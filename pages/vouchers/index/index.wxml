<!-- Scroll Menu -->
<view class="h-scroll_container scroll-menu">
  <scroll-view class="h-scroll capatilize" scroll-x="true">
    <block wx:for="{{ _pickers.voucher_status }}" wx:key="index" wx:for-item="status">
      <view
        class="h-scroll_item order-status{{ _picker_selected.status == index ? ' selected' : '' }}"
        bindtap="changeFilter"
        data-filter_type="order_status"
        data-value="{{ index }}"
      >
      <!-- All, Unused, Used -->
        {{ _t.voucher_status[status] }}
      </view>
    </block>
  </scroll-view>
</view>
<!-- End of Scroll Menu -->

<!-- Voucher List -->
<view class="container container-grey container-btn-bottom">
  <view class="voucher-content_container">
    <view class="gilroy_700 header">{{ _t.please_select_voucher }}</view>
    <block wx:for="{{ vouchers }}" wx:key="id" wx:for-item="voucher">
    <!-- 
            "pending",
            "validated",
            "declined",
            "used"
            =>>> expired, used, valid
    -->
      <view class="white-box flex-between voucher_container{{ voucher.status }}">
        <view class="voucher_detail">
          <view class="voucher_detail-content voucher_for">
            <text class="gilroy_500 voucher_label">{{ _t.available_for }}: </text>
            <text class="voucher_text">{{ voucher.community }}</text>
          </view>
          <view class="voucher_detail-content voucher_recs">
            <text class="gilroy_500 voucher_label">{{ _t.reveived }}: </text>
            <text class="voucher_text">{{ voucher.createdAt }}</text>
          </view>
          <view class="voucher_detail-content voucher_exp">
            <text class="gilroy_500 voucher_label">{{ _t.expire_on }}: </text>
            <text class="voucher_text">{{ voucher.status === "expired" ? _t.expired : voucher.expirationDate }}</text>
          </view>
          <view class="voucher_detail-content voucher_from">
            <text class="gilroy_500 voucher_label">{{ _t.from }}: </text>
            <text class="voucher_text">{{ voucher.reason }}</text>
          </view>

          <view class="voucher_detail-content voucher_nav" wx:if="{{ voucher.status === 'used' }}">
            <view class="voucher_text">{{ _t.to_order }}</view>
          </view>
        </view>

        <view class="gilroy_800 voucher_price">ï¿¥{{ voucher.amount }}</view>
      </view>
    </block>
  </view>

  <view class="btn-bottom contact-box">
      <view class="">{{ _t.checkout_message }}</view>
      <view class="contact-button_container">
        <button class="contact-button" open-type="contact">
          <text class="icon icon-headset"></text>
          <text class="nunito_600">{{ _t.contact_customer_hero }}</text>
        </button>
      </view>
    </view>
</view>
<!-- End of Voucher List -->